# ============================================
# GameHub 环境配置文件
# ============================================

# 应用配置
NODE_ENV=development
PORT=8000
API_PREFIX=/api
APP_NAME=GameHub

# ============================================
# API 密钥配置
# ============================================

# RAWG API - 游戏数据库
# 申请地址: https://rawg.io/apidocs
RAWG_API_KEY=ca78aa8fd3a542068ee73764f5879631

# Itch.io API - 独立游戏平台
# 申请地址: https://itch.io/user/settings/api-keys
ITCH_API_KEY=2nlnlpMzPERDH8JaXG4OQwK9Y1Wi0r2rIKZUN0vU

# IGDB API - 游戏信息数据库
# 申请地址: https://api-docs.igdb.com/
# 需要 Twitch 账号
IGDB_CLIENT_ID=your_igdb_client_id
IGDB_ACCESS_TOKEN=your_igdb_access_token

# ============================================
# 小游戏平台配置
# ============================================

# 微信小游戏
# 申请地址: https://developers.weixin.qq.com/
# 需要企业认证
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# 抖音小游戏
# 申请地址: https://open.douyin.com/
# 需要企业认证
DOUYIN_CLIENT_KEY=your_douyin_client_key
DOUYIN_CLIENT_SECRET=your_douyin_client_secret

# ============================================
# 游戏聚合配置
# ============================================

# 每次聚合的游戏数量
AGGREGATION_LIMIT=5000

# 同步间隔（小时）
SYNC_INTERVAL=24

# 最小评分（过滤用）
MIN_RATING=2

# ============================================
# TypeORM 连接字符串（可选，如果需要的话）
# 注释掉以避免与分段式配置冲突
# ============================================
#
# DATABASE_URL=postgresql://postgres:5625709@localhost:5432/gamehub
#
# ============================================
# 数据库配置
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gamehub
DB_USER=postgres
DB_PASSWORD=5625709
DB_SSL=false

# ============================================
# Redis 配置
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=123456
REDIS_DB=0

# ============================================
# JWT 配置
# ============================================
JWT_SECRET=your-secret-key-here-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-here-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# 日志配置
# ============================================

LOG_LEVEL=debug
LOG_FORMAT=json

# ============================================
# 前端配置
# ============================================

# 前端 API 地址（后端地址）
REACT_APP_API_URL=http://localhost:8000/api

# 前端应用名称
REACT_APP_APP_NAME=GameHub

# 前端开发服务器端口
VITE_PORT=5173

# 或者允许多个源（开发环境），前端在 5173 端口
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api

# WebSocket Configuration
VITE_WS_URL=http://localhost:8000

# Timeout Configuration
VITE_API_TIMEOUT=15000

# ============================================
# 邮件配置
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
FROM_EMAIL=noreply@gamehub.com
FROM_NAME=GameHub

# ============================================
# 文件上传配置
# ============================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# ============================================
# 限流配置
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# 第三方登陆配置区域
# ============================================
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret
WECHAT_CALLBACK_URL=http://localhost:8000/api/auth/wechat/callback

GITHUB_CLIENT_ID=Iv23liHKMHDxvciN7JAl
GITHUB_CLIENT_SECRET=2b45de3ff2648abf875f591443d09ff58394a884
GITHUB_CALLBACK_URL=http://localhost:8000/api/auth/github/callback

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:8000/api/auth/google/callback
{
  "name": "gamehub",
  "version": "1.0.0",
  "description": "GameHub - 游戏聚合平台 Monorepo",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:backend": "turbo run dev --filter=@littlegamehub/backend",
    "dev:frontend": "turbo run dev --filter=@littlegamehub/frontend",
    "build": "pnpm -r run build",
    "build:backend": "turbo run build --filter=@littlegamehub/backend",
    "build:frontend": "turbo run build --filter=@littlegamehub/frontend",
    "lint": "pnpm -r run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "test": "pnpm -r run test",
    "clean": "pnpm -r run clean && rimraf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
  },
  "keywords": [
    "gamehub",
    "monorepo",
    "games"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.22.0",
  "devDependencies": {
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "turbo": "^2.6.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@nestjs/schedule": "^6.0.1"
  }
}

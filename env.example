# GameHub Environment Configuration Template
# GameHub 环境配置模板
# 复制此文件为 .env 并填写实际值

# Server Configuration
NODE_ENV=development
PORT=8000
API_PREFIX=/api

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gamehub
DB_USER=gamehub
DB_PASSWORD=gamehub

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-change-in-production

# GitHub OAuth Configuration
# 从 GitHub Settings > Developer settings > OAuth Apps 获取
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:8000/api/auth/github/callback

# OAuth Configuration
OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/oauth/callback

# Redis Configuration (可选，用于token黑名单等功能)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (可选，用于密码重置)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=10

# Frontend URL (用于CORS和重定向)
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info
